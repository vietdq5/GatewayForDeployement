{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "Gateway",
    "Audience": "ApiUsers",
    "Key": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!@#$%"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/gateway-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "notification-route-hub": {
        "ClusterId": "notification-cluster",
        "Match": {
          "Path": "/hub/notifyHub/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/hub/notifyHub/{**catch-all}" }
        ]
      },
      "notification-route": {
        "ClusterId": "notification-cluster",
        "Match": {
          "Path": "/api/notifications/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/notifications/{**catch-all}" }
        ]
      },
      "todo-route": {
        "ClusterId": "todo-cluster",
        "Match": {
          "Path": "/api/Todos/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/Todos/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "notification-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5274/"
          }
        }
      },
      "todo-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5070/"
          }
        }
      }   
    }
  }
}